{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2015",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "./types",
    "outDir": "./",
    "esModuleInterop": true,
    "removeComments": true,
    "lib": [
      "es2015",
      "es2018"
    ],
    "typeRoots": [
      "./node_modules/@types/",
      "./typings/"
    ]
  },
  "include": [
    "2key-protocol/src"
  ],
  "exclude": [
    "node_modules"
  ]
}
